<%= semantic_form_for :form, url: '/forms', html: { id: dom_id(form) } do |f| %>
    <% form.questions.each do |question| %>
        <%= f.input dom_id(question), question.input_options %>
    <% end %>
    <%= f.actions %>
<% end %>

<script>
  $(function(){
     $('.required fieldset [type="radio"]:first,[type="checkbox"]:first').attr('required','true');
     $('#<%= dom_id(form) %>').validate();
  });
</script>
